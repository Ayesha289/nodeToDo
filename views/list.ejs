<%- include("header") -%>
    
<div class="box" id="heading">
    <h1><%= kindOfDay %> </h1>
</div>
    
<div class="box">
    <% newlistItems.forEach(function(newList){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= newList._id %>">
                <p><%= newList.name %></p>
            </div>
        </form>
    <% }); %>

    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button">+</button>
    </form>
</div>

<%- include("footer") -%>